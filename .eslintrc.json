{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "prefer-destructuring": ["error", {
            "array": true,
            "object": true
          },
            {
                "enforceForRenamedProperties": false
            }
        ],
        "arrow-parens": [
            "error", "as-needed"
        ],
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "react/forbid-prop-types": [
            "error"
        ]
    },
    "settings": {
        "react": {
          "pragma": "React",
          "version": "detect"
        }
    }
}